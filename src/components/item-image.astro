---
interface Props {
  image: string;
}

const { image } = Astro.props;
---

<div class="relative w-full">
  <img src={image} alt="" class="w-3/4 mx-auto relative z-10" />
  <img
    src={image}
    alt=""
    class="w-full absolute top-0 left-0 right-0 scale-110 z-0 blur-lg opacity-50"
    aria-hidden="true"
  />
</div>
